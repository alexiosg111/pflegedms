{
  "name": "pflegedms",
  "version": "1.0.0",
  "description": "PflegeDMS - Pflegedienst Management System",
  "type": "module",
  "main": "dist/electron-main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:svelte\" \"npm run dev:electron\"",
    "dev:svelte": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "npm run build:svelte && npm run build:electron",
    "build:svelte": "vite build && npm run copy:electron-files",
    "build:electron": "electron-builder",
    "copy:electron-files": "cp electron-main.js dist/ && cp preload.js dist/",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:all": "npm run build && electron-builder --win --mac"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/adapter-static": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@types/node": "^20.0.0"
  },
  "build": {
    "appId": "com.pflegedms.app",
    "productName": "PflegeDMS",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.business",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PflegeDMS"
    }
  }
}
