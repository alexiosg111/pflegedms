{
  "name": "pflegedienst-workspace",
  "version": "1.0.0",
  "type": "module",
  "description": "Modulare Desktop-Anwendung für Pflegedienste – Local-First, DSGVO-konform",
  "main": "dist/main.js",
  "preload": "dist/preload.js",
  "author": "Pflegedienst Team",
  "license": "PROPRIETARY",
  "scripts": {
    "dev": "concurrently \"npm run vite\" \"npm run electron:dev\"",
    "vite": "vite",
    "electron:dev": "wait-on http://localhost:5173 && electron . --dev",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "preview": "vite preview",
    "type-check": "npm run type-check:web && npm run type-check:electron",
    "type-check:web": "tsc --noEmit",
    "type-check:electron": "tsc -p tsconfig.electron.json --noEmit",
    "lint": "eslint src --ext .ts,.svelte",
    "format": "prettier --write \"src/**/*.{ts,svelte,css}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux",
    "dist:mac": "electron-builder --mac"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.2.2",
    "date-fns": "^2.30.0",
    "electron-is-dev": "^2.0.0",
    "pdfjs-dist": "^3.11.174",
    "svelte": "^4.2.8",
    "tesseract.js": "^5.0.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.5.0",
    "@playwright/test": "^1.40.1",
    "@testing-library/svelte": "^4.2.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.6",
    "@types/pdfjs-dist": "^2.10.377",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitest/ui": "^1.1.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-svelte": "^2.35.1",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.0",
    "svelte": "^4.2.8",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-svelte": "^3.0.1",
    "vitest": "^1.1.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "de.pflegedienst.workspace",
    "productName": "Pflegedienst Workspace",
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "files": [
      "dist/**/*",
      "migrations/**/*",
      "node_modules/**/*",
      "!node_modules/.bin"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}
