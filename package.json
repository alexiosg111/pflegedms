{
  "name": "pflegedms",
  "version": "1.0.6",
  "description": "PflegeDMS - Pflegedienst Management System",
  "type": "module",
  "main": "electron/main.js",
  "author": {
    "name": "PflegeDMS Team",
    "email": "team@pflegedms.de"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win --config electron-builder.yml",
    "electron:build:mac": "npm run build && electron-builder --mac --config electron-builder.yml",
    "electron:build:linux": "npm run build && electron-builder --linux --config electron-builder.yml"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@types/node": "^20.0.0"
  }
}
