# Environment variables for development

# Database
DATABASE_PATH=~/.pflegedienst/pflegedienst.db
DATABASE_BACKUP_DIR=~/.pflegedienst/backups

# App
NODE_ENV=development
APP_NAME=Pflegedienst Workspace
APP_VERSION=1.0.0

# Vite
VITE_DEV_SERVER_URL=http://localhost:5173

# Security
BCRYPT_ROUNDS=12
SESSION_TIMEOUT_MINUTES=480

# OCR
OCR_LANGUAGE=deu
OCR_ENABLE_CACHE=true

# Logging
LOG_LEVEL=info
LOG_FILE=~/.pflegedienst/logs/app.log
